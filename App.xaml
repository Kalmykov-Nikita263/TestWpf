<Application x:Class="TestWpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TestWpf"
             xmlns:vm="clr-namespace:TestWpf.ViewModels"
             xmlns:v="clr-namespace:TestWpf.Views">
    <Application.Resources>

        <DataTemplate DataType="{x:Type TypeName=vm:AuthorizationViewModel}">
            <v:Authorization/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type TypeName=vm:HomeViewModel}">
            <v:Home/>
        </DataTemplate>

    </Application.Resources>
</Application>
